{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@env": ["environments/environment"],
      "@components/*": ["app/components/*"],
      "@core/*": ["app/core/*"],
      "@directives/*": ["app/directives/*"],
      "@globals/*": ["app/globals/*"],
      "@helpers/*": ["app/helpers/*"],
      "@models/*": ["app/models/*"],
      "@pages/*": ["app/pages/*"],
      "@pipes/*": ["app/pipes/*"],
      "@services/*": ["app/services/*"],
    },
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}